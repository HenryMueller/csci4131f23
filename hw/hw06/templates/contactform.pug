doctype html
html(lang="en")
  head
    meta(charset='UTF-8')
    title Contact Us!
    link#css(href='/resources/css/main.css' rel='stylesheet')
    script(src='/resources/js/main.js' async='')
    script(src='/resources/js/contact.js' async='')
  include navigation.pug
  h1 Questions? Comments? Concerns?
  form(action='/contact' method='post')
    div
      label(for='user') Name
      input#name(type='text' name='user' required='')
    div
      label(for='email') Email
      input#email(type='email' name='email' required='')
    div
      label(for='appointment') Need email sent by
      input#date(type='date' name='appointment' required='')
    div
      label(for='qtype') I have a...
      select#drop(name='qtype' required='')
        option(value='' disabled='' selected='') Select an Option
        option(value='question') Question
        option(value='comment')  Comment 
        option(value='concern')  Concern 
        option(value='other')    Other   
    div
      label(for='ssn') SSN included in email?
      input#option1(type='checkbox' name='ssn')
    #dynam-elem
    div
      input(type='submit' name='submit')
